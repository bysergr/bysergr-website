---
import MetaTags from "@core/MetaTags.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="motion-safe:scroll-smooth">
  <head>
    <MetaTags />
    <title>{`Sergio Rey - ${title}`}</title>
  </head>
  <body
    class="px-4 bg-dark text-white overflow-x-hidden min-h-screen max-w-3xl mx-auto"
  >
    <slot />
  </body>
</html>
