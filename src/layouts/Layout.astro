---
import "@fontsource-variable/inter";
import MetaTags from "@/components/core/MetaTags.astro";
import "@/styles/base.css";

interface Props {
  title?: string;
  description?: string;
  author?: string;
  keywords?: [string];
  canonicalURL?: string;
  socialImageURL?: string;
}

const PageProps = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <MetaTags {...PageProps} />
    {/* General Scripts */}
    <script src="../scripts/navbar.js"></script>
  </head>
  <body
    class="font-display antialiased tracking-normal bg-dark text-white overflow-x-hidden min-h-screen"
  >
    <slot />
  </body >
</html>
