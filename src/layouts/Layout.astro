---
import MetaTags from "@core/MetaTags.astro";
import Scripts from "@core/Scripts.astro";
import Styles from "@core/Styles.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="motion-safe:scroll-smooth">
  <head>
    <MetaTags />
    <title>{`Sergio Rey - ${title}`}</title>
  </head>
  <body
    class="antialiased tracking-tight bg-dark text-white overflow-x-hidden min-h-screen"
  >
    <Scripts />
    <Styles />
    <slot />
  </body>
</html>
