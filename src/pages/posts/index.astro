---
import { getPageNumbersPosts } from "@/utils/getPageNumbers";
import { getCollection } from "astro:content";
import PostList from "@/components/widgets/PostList.astro";
import getSortedPosts from "@/utils/getSortedPosts";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);

const pageNumberPosts = getPageNumbersPosts(sortedPosts.length);
---

<PostList
  sortedPosts={sortedPosts}
  numberPage={1}
  amountPages={pageNumberPosts.length}
/>
