---
import type { experience } from "@data/Experience";
import Icon from "astro-icon";

interface Props {
  Experience: experience;
}

const { Experience } = Astro.props;
---

<li class="flex gap-4 items-baseline">
  <span class="w-7 h-7 text-center font-semibold">âžœ</span>
  <div class="flex flex-col gap-2">
    <h3 class="font-semibold text-base">
      {Experience.title}
    </h3>
    <span class="text-sm font-normal flex gap-1 items-center">
      <Icon class="w-4 h-4" name="ic:baseline-map" />
      {Experience.company} -
      {Experience.location}
    </span>
    <p class="text-sm font-normal text-gray-300 leading-6">
      {Experience.description}
    </p>
    <span
      class="text-sm font-normal text-gray-400 mt-1 flex gap-1 items-center"
    >
      {Experience.from} - {Experience.to}
    </span>
  </div>
</li>
