---
import { type Experience } from "@/types";
import Icon from "astro-icon";

interface Props {
  Experience: Experience;
}

const { Experience } = Astro.props;
---

<li class="flex gap-4 items-baseline">
  <span class="w-7 h-7 text-center font-semibold text-white">âžœ</span>
  <div class="flex flex-col gap-2">
    <h3 class="font-semibold text-base flex gap-2 items-center">
      {Experience.title}
      <span class="text-white">&gt;</span>
      <span class="text-sm font-normal flex gap-1 items-center">
        <Icon class="w-4 h-4" name="uis:calender" />
        {Experience.from}
        {Experience.to ? ` - ${Experience.to}` : ""}
      </span>
    </h3>
    <p class="text-sm font-normal flex gap-1 items-center">
      <Icon class="w-4 h-4" name="ic:baseline-map" />
      {Experience.company} - {Experience.location}
    </p>
    <p class="text-sm font-normal text-gray-300 leading-7">
      {Experience.description}
    </p>
  </div>
</li>
