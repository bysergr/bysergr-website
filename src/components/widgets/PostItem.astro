---
import { slugifyPost } from "@/utils/slugify";
import { type CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">["data"];
}

const { post } = Astro.props;
---

<li
  class="sm:flex justify-between hover:text-white text-gray-300 hover:border-gray-300 border-gray-400"
>
  <h3 class="text-lg">
    <a
      href={`/posts/${slugifyPost(post)}`}
      class="font-semibold border-b w-fit border-dotted"
    >
      {post.title}</a
    >
  </h3>
  <small class="text-sm sm:text-base">{post.date.toDateString()}</small>
</li>
