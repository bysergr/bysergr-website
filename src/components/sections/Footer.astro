---
import { Icon } from "astro-icon";
import Line from "@/components/atoms/Line.astro";
---

<footer
  class="px-4 mt-6 max-w-3xl mx-auto text-gray-300 h-24 flex flex-col justify-evenly"
>
  <Line />
  <div class="flex items-center justify-between">
    <small class="text-sm font-semibold">Sergio Rey - 2024</small>
    <nav class="flex gap-4 items-center">
      <Icon
        aria-label="Icon of RSS"
        class="h-4 w-4 hover:text-white"
        name="mdi:rss"
      />
      <a
        target="_blank"
        aria-label="Github"
        rel="noopener"
        href="https://github.com/bysergr"
      >
        <Icon
          aria-label="Icon of GITHUB"
          class="h-4 w-4 hover:text-white"
          name="bi:github"
        />
      </a>
      <a aria-label="Email" href="mailto:bysergr@gmail.com">
        <Icon
          aria-label="Icon of EMAIL"
          class="h-4 w-4 hover:text-white"
          name="ic:baseline-mail"
        />
      </a>
    </nav>
  </div>
</footer>
